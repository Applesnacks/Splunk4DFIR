<form version="1.1" theme="dark">
  <label>NotablesHunt - Endpoint</label>
  <search id="base">
    <query>index=notable_events | fillnull value="NA" source guid dvc _raw | fields _time source guid dvc _raw</query>
    <earliest>$timepicker.earliest$</earliest>
    <latest>$timepicker.latest$</latest>
    <sampleRatio>1</sampleRatio>
  </search>
  <search id="filtered_base" base="base">
    <query>
| search dvc IN ( $selected_dvc$ ) source IN ( $selected_rule$ )
| table _time source guid dvc _raw</query>
  </search>
  <fieldset submitButton="true">
    <input type="time" token="timepicker">
      <label>Time span</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="multiselect" token="selected_dvc" searchWhenChanged="true">
      <label>Select Device</label>
      <search base="base">
        <query>| stats count by dvc | dedup dvc</query>
      </search>
      <fieldForLabel>dvc</fieldForLabel>
      <fieldForValue>dvc</fieldForValue>
      <delimiter> , </delimiter>
      <default>*</default>
      <valuePrefix>"</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <choice value="*">ALL</choice>
    </input>
    <input type="multiselect" token="selected_rule" searchWhenChanged="true">
      <label>Select Rule</label>
      <search base="base">
        <query>| stats count by source | dedup source</query>
      </search>
      <fieldForLabel>source</fieldForLabel>
      <fieldForValue>source</fieldForValue>
      <delimiter> , </delimiter>
      <default>*</default>
      <valuePrefix>"</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <choice value="*">ALL</choice>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Timeline - Rule</title>
      <chart>
        <search base="filtered_base">
          <query>| timechart count by source</query>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.stackMode">stacked</option>
      </chart>
    </panel>
    <panel>
      <title>Timeline - Device</title>
      <chart>
        <search base="filtered_base">
          <query>| timechart count by dvc</query>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.stackMode">stacked</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Notables</title>
      <table>
        <search base="filtered_base">
          <query/>
        </search>
        <option name="drilldown">cell</option>
      </table>
    </panel>
  </row>
</form>
